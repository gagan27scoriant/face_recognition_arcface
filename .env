# Environment Configuration for Facial Recognition System
# These settings control GPU/CPU usage, model parameters, and system behavior

# ==================== DEVICE CONFIGURATION ====================
# Set to True to use GPU if available, False for CPU-only
USE_GPU=True
# Options: 'auto' (auto-detect), 'gpu', 'cpu'
DEVICE_TYPE=auto

# ==================== MODEL CONFIGURATION ====================
# ArcFace model for face recognition
MODEL_NAME=ArcFace
# Distance metric for face similarity
DISTANCE_METRIC=cosine
# Confidence threshold (0-1) for face recognition
THRESHOLD=0.6

# ==================== FLASK WEB SERVER ====================
FLASK_ENV=production
FLASK_DEBUG=False
HOST=0.0.0.0
PORT=5000

# ==================== PATHS ====================
DATABASE_DIR=database
DATASET_DIR=dataset
MODELS_DIR=models
LOGS_DIR=logs

# ==================== CAMERA SETTINGS ====================
# Camera device index (0 = default camera)
CAMERA_INDEX=0
# Input image resolution
INPUT_SIZE=640
# Process every Nth frame for performance
FRAME_SKIP=2
# Target frames per second
TARGET_FPS=25
